<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
	android:orientation="vertical">
	
	<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:orientation="horizontal">
	
		<Button android:id="@+id/btn_systeem_l"
			android:text="@string/btn_systeem_l"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:onClick="switchSystem"/>
		
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/txtv_pijl"/>
			
		<Button android:id="@+id/btn_systeem_r"
			android:text="@string/btn_systeem_r"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:onClick="switchSystem"/>
		
	</LinearLayout>
	
	<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:orientation="horizontal">
	
		<ImageView android:id="@+id/img_length"
			android:layout_height="50dp"
			android:layout_width="50dp"/>
		
		<ImageView android:id="@+id/img_temp"
			android:layout_height="50dp"
			android:layout_width="50dp"/>
	
	</LinearLayout>
		
	<Spinner android:id="@+id/eenheid_spinner_links"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="1"/>
	
	<Spinner android:id="@+id/eenheid_spinner_rechts"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="1"/>

	<Spinner android:id="@+id/grootheid_spinner"
		android:layout_width="160dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"/>

	<EditText
		android:id="@+id/txt_from"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:hint="@string/left_txt"
		android:inputType="numberDecimal" 
		android:layout_weight="1"/>
	
	<TextView android:id="@+id/txtv_uitkomst"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="@string/txtv_uitkomst_def"
		android:layout_weight="1"/>

	<Button android:id="@+id/btn_convert"
		android:text="@string/btn_convert"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:onClick="convert"
		android:layout_weight="1"/>

	<Button android:id="@+id/btn_switch"
		android:text="@string/btn_switch"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:onClick="switchUnits"
		android:layout_weight="1"/>
	
	<Spinner android:id="@+id/spn_presets"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="1"/>
	


</LinearLayout>