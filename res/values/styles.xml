<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
	
	<style parent="@android:style/Widget.EditText" name="EditText_zonder_margin">
		<item name="android:layout_margin">0dp</item>
	</style>

	<style parent="@android:style/Widget.Spinner" name="SpinnerAsEditText">
		<item name="android:background">@android:drawable/edit_text</item>
		<item name="android:layout_margin">0dp</item>
	</style>
	
	<style parent="@android:style/Widget.TextView" name="TextView_zonder_margin">
		<item name="android:layout_margin">0dp</item>
	</style>
	
	<style name="ImageView_style">
		<item name="android:layout_margin">7dp</item>
		<item name="android:layout_height">50dp</item>
		<item name="android:layout_width">50dp</item>
		<item name="android:background">#FF000000</item>
	</style>
	
	<style name="Layout_spacing">
		<item name="android:layout_height">90dp</item>
	</style>


</resources>
